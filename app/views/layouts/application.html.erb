<!DOCTYPE html>
<html>
<head>
  <title><%= content_for(:title) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="flash">
  <% if notice %>
  <div class="flash_notice"><%= notice %></div>
  <% end %>
  <% if alert %>
  <div class="flash_alert"><%= alert %></div>
  <% end %>
</div>

<%#------- Menu bar ----------------------------%>
<ul id="nav_menu">
<%# user is logged in, show log out link %>
  <li>
  <% if current_user.present? %>
    Signed in as <b><%= current_user.email %></b>
    <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
  <%# user is not logged in, show signup and login links %>
  <% else %>
    <%= link_to 'Sign In', new_user_session_path %> |
    <%= link_to 'Register Now!', new_user_registration_path %>
  <% end %>
  </li>

  <li>
    <%= link_to "Home", root_path %>
  </li>
  <li>
    <%= link_to "Browse", listing_index_path %>
  </li>
</ul>

<%= yield %>

</body>
</html>
