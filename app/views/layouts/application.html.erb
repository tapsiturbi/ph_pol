<!DOCTYPE html>
<html>
<head>
  <title><%= content_for(:title) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%#-- Logo and Menu bar ----------------------------%>
<div id="topbar">
  <div class="logo">Politikahan</div>
  <ul id="nav_menu">
  <%# user is logged in, show log out link %>
    <% if current_user.present? %>
      <li>

        <%= link_to destroy_user_session_path, method: :delete do %>
          <%= image_tag "icon_user.png", title: "Signed in as #{current_user.email}" %>
          <br/>
          Sign Out
        <% end %>

      </li>

    <%# user is not logged in, show signup and login links %>
    <% else %>
      <li>
        <a href="<%= new_user_session_path %>">
          <%= image_tag("icon_check.png", title: "Sign In") %> <br/>
          Sign In
        </a>
      </li>
      <li>
        <a href="<%= new_user_registration_path %>">
          <%= image_tag("icon_user.png", title: "Register") %> <br/>
          Register
        </a>
      </li>
    <% end %>
    <li>
      <a href="<%= root_path %>">
        <%= image_tag("icon_home.png", title: "Home") %> <br/>
        Home
      </a>
    </li>
    <li>
      <a href="<%= listing_index_path %>">
        <%= image_tag("icon_search.png", title: "Browse") %> <br/>
        Browse
      </a>
    </li>
  </ul>

  <div style="clear: both;"></div>
</div>

<div id="flash">
  <% if notice %>
    <script type="text/javascript"> showFlash("<%= escape_javascript(notice)%>"); </script>
  <% end %>
  <% if alert %>
  <div class="flash_alert"><%= alert %></div>
  <% end %>
</div>

<%= yield %>

</body>
</html>
