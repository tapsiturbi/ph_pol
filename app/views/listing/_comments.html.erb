<% career.comment_threads.each do |cmt| %>
  <ul id="cmt_<%= cmt.id %>">
    <li>
      <div class="user">
        <% if cmt.user.username %>
          <%= cmt.user.username %>
        <% else %>
          Anonymous
        <% end %>
        <span class="date">
          <%= cmt.created_at %>
        </span>
      </div>
      <div class="comment"> <%= cmt.body %> </div>
    </li>
  </ul>
<% end %>