* { font-family: 'ciclesemi', helvetica, tahoma; }


body { background: #FFF url("<%= asset_path 'wavegrid.png' %>"); margin: 0; }

h1.page_title {margin: 15px; }

#inner_topbar, #mainbody, #page_title h1 { width: 960px; margin: 0 auto;}

#topbar { background-color: rgba(0, 0, 0, 0.8); text-shadow: 0 0 1px rgba(255, 255, 255, 0.9); top: 0px; position: relative; height: 70px; color: #FFF; font-size: 14px; border-bottom: 1px solid #444444; }

#topbar a { color: #FFF; }
#topbar .logo { float: left; width: 300px; margin: 18px 15px; font-size: 24px; font-weight: bold; background: transparent url("<%= asset_path 'site_logo.png' %>") no-repeat scroll 0 2px; background-size: 24px; padding-left: 30px; }
#topbar .logo a { text-decoration: none; }

#nav_menu { margin: 10px 0; float: right; width: 450px; }
#nav_menu > li { display: block; float: right; width: 100px; text-align: center; background-repeat: no-repeat; border-left: 1px dotted #555; height: 50px; }
#nav_menu li a { opacity: 0.6; text-decoration: none; }
#nav_menu li a:hover, #nav_menu li a.highlight { opacity: 1; }
#nav_menu > li .sub {display: none;  background-color: #000000; opacity: 0.7; padding: 15px; text-align: left; position: relative; z-index: 100; }
#nav_menu > li .sub li { list-style: none; display: block;}
#nav_menu > li .sub li form { width: 250px; }

#nav_menu > li .sub:after { bottom: 100%; border: solid transparent; content: " "; height: 0; width: 0; position: absolute; pointer-events: none; }
#nav_menu > li .sub:after { border-color: rgba(0, 0, 0, 0); border-bottom-color: #000000; border-width: 5px; left: 50%; margin-left: -5px; }

#nav_menu > li .cmd_list { padding: 15px 0; }
#nav_menu > li .cmd_list li { display: block; }
#nav_menu > li .cmd_list li > a { display: block; padding: 5px; }
#nav_menu > li .cmd_list li > a:hover { border-left: 5px solid white; }

#nav_menu > li .profile { border-bottom: 1px solid #afafaf; margin: 0 0 5px 0; padding: 0 0 15px; }
.avatar { float: left; margin: 0 5px 0 0; }

.flash_notice { background-color: #449955; color: #EFEFEF; padding: 3px 5px; font-weight: bold; position: fixed; top: 0; left: 0; text-align: center; width: 100%; z-index: 1000; }
.flash_alert { background-color: #FF4455; color: #EFEFEF; padding: 3px 5px; font-weight: bold; position: fixed; top: 0; left: 0; text-align: center; width: 100%; z-index: 1000; }

#mainfooter { background: transparent url("<%= asset_path 'pattern-diag.gif' %>"); min-height: 100px; }

#page_title { background-color: #D4D4D4; color: #444444; height: 40px; text-shadow: 0 1px rgba(255, 255, 255, 0.5); border-top: 1px solid #000; border-bottom: 1px solid #BBB; }
#page_title h1 { font-size: 22px; padding: 8px 0 0 30px; }

#mainbody { margin: 10px auto; }

.pretty_box { width: 400px; float: left; color: #444; margin: 0 0 30px 30px; }
.pretty_box a { text-decoration: none; }
.pretty_box .title, .pretty_box .subtitle {font-size: 24px; font-weight: bold;}
.pretty_box .title {  padding: 15px 0 5px 15px; }
.pretty_box > .title  { border-bottom: 3px solid #FFB600; }
.pretty_box .body { font-size: 14px; margin-bottom: 15px; }
.pretty_box .body .one_line { padding: 15px; display:block; }
.pretty_box .body a.one_line:hover { background: #D4D4D4 url("<%= asset_path 'icon_right.png' %>") no-repeat scroll center right; }
/*
