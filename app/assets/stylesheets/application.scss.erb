.career_detail { float: none; margin: 0 auto; width: 900px; }
.career_detail .title > img { float: right; margin-right: 15px; opacity: 0.9; width: 26px; }

.career_detail .photos { padding: 10px 0;}

.career_detail .comments { padding: 15px; }
.comments > .subtitle { padding: 15px 0; border-bottom: 3px solid #0FBE7C; }
.comments ul { margin: 15px 0; padding: 0 0 15px 0; border-left: 1px dotted gray; opacity: 0.95; background-color: #FFF; color: #888; }
.comments ul li { display: block; padding: 10px 15px 0; }
.comments .user .date { font-size: 0.9em; color: #999; background-color: #efefef; padding: 0px 5px; }
.comments .comment { margin:15px; color: #34495e; }
.comments .actions { margin: 5px 0; }
.comments .actions a { color: #797; font-size: 12px; font-weight: bold; text-align: center; text-decoration: none; }
.comments .actions a:hover {text-decoration: underline;}

.comments .votes { width: 20px; float: left; margin-right: 10px; background-color: transparent; color: #444; }
.comments .votes > span { font-size: 18px; }
.comments .votes > * { display: block; text-align: center; }
.comments .votes .upvote > div, .votes .downvote > div { width: 18px; height: 18px; background-image: url("<%= asset_path 'sprites-arrows.png' %>"); background-attachment: scroll; margin: 0 auto; }
.comments .votes .upvote > div { background-position: -44px 0; }
.comments .votes .downvote > div { background-position: -2px 0; }
.comments .votes .upchecked > div { background-position: -65px 0;  }
.comments .votes .downchecked > div { background-position: -23px 0;  }

/* -2, -23 , -44, -65*/

.div_form { width: 500px; border-radius: 5px; background-color: #ecf0f1; margin: 15px 0; color: #444; }
.div_form .title { background-color: #bdc3c7; color: #efefef; font-weight: bold; padding: 2px 5px; font-size: 16px; clear: left; }
.div_form .field_line { margin: 5px; font-size: 12px; clear: left; }
.div_form .field_line label {float: left; display: block; width: 100px; font-size: 14px; }
.div_form .formErrors { padding: 10px; color: red; }
.div_form .formErrors h5 { margin: 0; font-size: 1em; border-bottom: 1px solid #dfdfdf; }
.div_form .formErrors ul { margin: 0; }
.career_detail .div_form { width: 100%; }

.div_form .subtitle {margin: 10px 0; font-size: 16px; border-bottom: 1px solid gray;}
.div_form .mini_div_form {width: 400px; margin: 15px;}

.div_form .required:after { content:" *"; color: #e32; }

.mini_div_form label { display: block; }

.actions a { color: #444; }

.score { font-size:18px; margin: 5px 0; }
.score .neg, .score .pos { font-size: 24px; font-weight: bold; background-color: #FFF; padding: 3px 5px; border: 1px solid #000; border-radius: 5px; }
.score .neg { color: red; border-color: red; }
.score .pos { color: #0FBE7C; border-color: #0FBE7C; }