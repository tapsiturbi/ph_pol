.pretty_box .politician { color: #000; font-weight: bold; }
.pretty_box .user { color: #444; }
.pretty_box .user .date { color: #aaa; font-size: 12px; }
.pretty_box .comment { color: #888; }
.pretty_box .votes { background-color: #AAAAAA; border-radius: 2px 2px 2px 2px; color: #FFFFFF; float: left; padding: 2px; text-align: center; width: 20px; }

.controversial .title { border-bottom: 3px solid #0FBE7C; }

/*
.controversial { background-color: #e67e22; }
.controversial .body a.one_line:hover {background-color: #d35400; }
