.arrow-left { width: 0; height: 0; border-top: 10px solid transparent; border-bottom: 10px solid transparent; border-right:10px solid white; position: absolute; }

.post-box { margin: 12px 2px; height: 400px; }
.post-box-img { height: 250px; background-color: #FFF; background-repeat: no-repeat; background-position: left top; background-size: cover; border: 1px solid #A168D5; }
a.post-box-img:hover { text-decoration: none; }
.subbox { text-align: center; }
.post-box .breadcrumb { text-align: center; margin-bottom: 0; border-radius: 0; background-color: #A168D5; color: #ddd;}
.post-box .breadcrumb a {color: #FFF; }

.navbar-nav .active a { border-bottom: 2px solid #A68200; }
.navbar-brand a:hover {text-decoration: none;}
.navbar .navbar-brand, .navbar .navbar-nav > li > a { text-transform: uppercase;}
.navbar .navbar-brand a { color: $navbar-default-brand-color; }

.post-box .votebox { width: 25px; background-color: #8E41D5; color: #FFF; border-radius: 5px; }
.post-box .votebox a { color: #FFF; }
.post-box .votebox a.text-primary { color: $brand-primary; }
.post-box .votebox a.text-warning { color: $brand-warning; }
.post-box .votebox a.text-muted { color: $text-muted; }

body { background-color: #F4F2E6; }
