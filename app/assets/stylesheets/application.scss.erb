.arrow-left { width: 0; height: 0; border-top: 10px solid transparent; border-bottom: 10px solid transparent; border-right:10px solid white; position: absolute; }

.post-box, .tabs .tab-content .post-box { height: 400px; padding-left: 0; }
.post-box-img { height: 250px; background-color: #FFF; background-repeat: no-repeat; background-position: left top; background-size: cover; border: 1px solid #A168D5; }
a.post-box-img:hover { text-decoration: none; }
.subbox { text-align: center; }
.post-box .breadcrumb { text-align: center; margin-bottom: 0; border-radius: 0; background-color: #A168D5; color: #ddd;}
.post-box .breadcrumb a {color: #FFF; }

.navbar-nav .active a { border-bottom: 2px solid #A68200; }
.navbar-brand a:hover {text-decoration: none;}
.navbar .navbar-brand, .navbar .navbar-nav > li > a { text-transform: uppercase;}
.navbar .navbar-brand a { color: $navbar-default-brand-color; }

.post-box .votebox { width: 25px; background-color: #8E41D5; color: #FFF; opacity: 0.25; }
.post-box:hover .votebox { opacity: 1;}
.post-box .votebox a { color: #FFF; }
.post-box .votebox a.text-primary { color: $brand-primary; }
.post-box .votebox a.text-warning { color: $brand-warning; }
.post-box .votebox a.text-muted { color: $text-muted; }

input.loading { background: #FFF url('<%= asset_path "spinner-arrow.gif" %>') no-repeat right 3px; }

#chart_div { height: 400px; }
#prov_container { overflow-y: auto; height: 350px; }
#lbl_region { margin: 0; }
.regions .provs { background-color: $brand-primary; color: #FFF; }
.regions .provs .sub_provs > span { float: left; width: 120px; white-space: nowrap; overflow-x: hidden; }
.regions .provs .sub_provs { padding-left: 2em; background-color: #FFF; color: #333; }
.regions label { font-weight: normal; }

#sel_label li { border-radius: 2px; margin: 0 3px; }

html body { background-color: #AFAFAF; }

.tabs { margin-top: 25px; }
.tab-header { background-color: #afafaf; color: $navbar-default-brand-color; padding: 10px 60px 10px 10px; position: relative; display: block; width: 250px; border-radius: 5px 0px 0px 5px;}
.tab-header:after { content: ""; width: 0; height: 0; border-top: 25px solid transparent; border-bottom: 25px solid transparent; border-right: 25px solid #FFF; position: absolute; right: 0px; top:0px; }

.tabs .tab-content { margin: 25px 0; border-bottom: 1px solid #EFEFEF; }
.tabs .tab-content:last-child {border-bottom: 0;}

.no-image {}
.no-image:after { /*font-family: "Glyphicons Halflings"; content: "\E111";*/ font-family: "FontAwesome"; content: "\F0A1"; display: block; text-align: center; font-size: 50px; color: #AFAFAF; margin-top: 15px; }

.posts { margin: 25px 0; }